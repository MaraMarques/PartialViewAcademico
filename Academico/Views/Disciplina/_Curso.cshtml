@model IEnumerable<Academico.Models.CursoDisciplina>

<div class="panel panel-primary">
    <div class="card-header text-white bg-warning text-center">
        Relação de Cursos registrados para Disciplinas
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Curso)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Curso.Nome)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info"></div>
</div>